@model RedWallet.Models.WalletModels.WalletCreate

@{
    ViewBag.Title = "Create New Wallet";
}
<br />
<br />
<div class="card-title text-center mt-5">
    <div class="col-lg-15">
        <h2>@ViewBag.Title.</h2>
    </div>
</div>

<div class="d-flex p-2 justify-content-center">
    <div class="col-lg-15">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div style="float: none ">
                    @Html.LabelFor(model => model.WalletName, htmlAttributes: new { @class = "control-label col-lg-15" })
                    <div class="col-lg-15">
                        @Html.EditorFor(model => model.WalletName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.WalletName, "", new { @class = "text-danger" })
                    </div>
                </div>
                
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Passphrase, htmlAttributes: new { @class = "control-label col-lg-15" })
                <div class="col-lg-15">
                    @Html.EditorFor(model => model.Passphrase, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Passphrase, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EntropyInput, htmlAttributes: new { @class = "control-label col-lg-15" })
                <div class="col-lg-15">
                    @Html.EditorFor(model => model.EntropyInput, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EntropyInput, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-15">
                    <input type="submit" value="Create" class="btn btn-long bg-danger text-white shadow mt-3 mb-2" />
                </div>
            </div>
        }

        <div class="col-lg-15">
            <input type="submit" value="Other Wallets" class="btn btn-long bg-secondary text-white shadow" onclick="location.href='@Url.Action("Index", "Wallet")'" />
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

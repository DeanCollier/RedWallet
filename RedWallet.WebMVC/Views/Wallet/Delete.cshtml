@model RedWallet.Models.WalletModels.WalletDetail

@{
    ViewBag.Title = "Delete";
}

<br />
<br />

<div class="alert alert-danger" role="alert">
    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
    !ATTENTION! - MANUALLY BACKUP YOUR WALLET SEED PHRASE AND PASSPHRASE BEFORE DELETING.
    IF SEED PHRASE AND PASSPHRASE ARE NOT BACKED UP, WALLET WILL NOT BE RECOVERABLE.
</div>

<div class="d-flex p-2 justify-content-center">
    <div class="col-lg-15">
        <h3>Are you sure you want to delete @Model.WalletName?</h3>
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color text-center">

                    <input type="submit" value="Yes, Delete @Model.WalletName" class="btn bg-danger text-white shadow" />

                </div>
            }
        </div>
        <button type="submit" class="btn bg-secondary text-white shadow m-2" onclick="location.href='@Url.Action("Index", "Wallet")'">Other Wallets</button>

    </div>
</div>




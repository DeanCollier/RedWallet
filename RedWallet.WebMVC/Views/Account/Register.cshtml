@model RedWallet.WebMVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<br />
<br />

<div class="card-title text-center mt-5">
    <div class="col-lg-15">
        <h1 class="text-danger title-text" type="submit" onclick="location.href='@Url.Action("Index", "Dashboard")'">RedWallet</h1>
        <h2>Create a new account.</h2>
    </div>
</div>

<div class="d-flex p-2 justify-content-center">
    <div class="col-lg-15">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "col-lg-15 control-label" })
                <div class="col-lg-15">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-lg-15 control-label" })
                <div class="col-lg-15">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-15 control-label" })
                <div class="col-lg-15">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-15">
                    <input type="submit" value="Register" class="btn btn-long bg-danger text-white shadow mt-3 mb-2" />
                </div>
            </div>
        }
        <div class="col-lg-15">
            <input type="submit" value="I Have An Account" class="btn btn-long bg-secondary text-white shadow" onclick="location.href='@Url.Action("Login", "Account")'" />
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

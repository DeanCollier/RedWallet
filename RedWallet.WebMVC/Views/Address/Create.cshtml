@model RedWallet.Models.WalletModels.WalletDetail

@{
    ViewBag.Title = "Get Public Address";
}

<br />
<br />
<div class="card-title text-center mt-5">
    <div class="col-lg-15">
        <h2>@ViewBag.Title For @Model.WalletName:</h2>
    </div>
</div>

<div class="d-flex p-2 justify-content-center">
    <div class="col-lg-15">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                

                <div class="form-group">
                    <div class="col-lg-15">
                        <input type="submit" value="Get Public Address" class="btn btn-long bg-danger text-white shadow mt-3 mb-2" />
                    </div>
                </div>
            </div>
        }
        <div class="col-lg-15">
            <button type="submit" class="btn btn-long bg-secondary text-white shadow" onclick="location.href='@Url.Action("Index", "Address", new { walletId = Model.WalletId })'">Other Addresses</button>
        </div>
    </div>
</div>

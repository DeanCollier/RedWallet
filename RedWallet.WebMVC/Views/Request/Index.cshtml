@model IEnumerable<RedWallet.Models.RequestModels.RequestListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WalletName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestAddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.WalletName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequestAddress)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.RequestId }) |
